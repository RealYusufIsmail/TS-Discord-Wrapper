{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["ESNext"],
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@helpers/*": ["src/helpers/*"]
    },
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  //stop making .js files
    "watchOptions": {
        "watchFile": "useFsEvents",
        "excludeDirectories": ["node_modules"]
    }
}